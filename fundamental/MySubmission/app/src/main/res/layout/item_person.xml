<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center_vertical"
    android:padding="16dp"
    android:layout_marginBottom="3dp"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/person_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/user2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/person_img"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:ellipsize="end"
            android:maxLines="1"
            style="bold"
            android:textColor="@color/black"
            android:text="@string/person_name"
            />
        <TextView
            android:id="@+id/person_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/person_username"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            app:drawableLeftCompat="@drawable/ic_baseline_person_24"
            android:drawablePadding="8dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/person_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:drawableStartCompat="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="8dp"
            android:layout_gravity="center_vertical"
            android:text="@string/person_location"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/person_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_business_24"
            android:drawablePadding="8dp"
            android:text="@string/person_company"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            />
    </LinearLayout>
</RelativeLayout>











